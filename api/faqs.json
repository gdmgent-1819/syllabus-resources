---
permalink: api/faqs.json
---
{%- assign faqs = site.faqs -%}
[
{%- for faq in faqs %}
  {
    "id"            : "{{ faq.question | slugify }}",
    "url"           : "{{ 'faqs' | absolute_url }}",
    "title"         : "{{ faq.question | escape }}",
    "title_long"    : "{{ faq.question | escape }}",
    "description"   : "{{ faq.shortanswer | escape }}",
    "keywords"      : null,
    "thumbnail_url" : null,
    "content"       : {{ faq.content | strip_html | strip_newlines | strip | remove:  "	" | escape | remove: "\" | normalize_whitespace | jsonify }},
    "question"      : "{{ faq.question | escape }}",
    "shortanswer"   : "{{ faq.shortanswer | escape }}",
    "answer"        : {{ faq.content | strip_html | strip_newlines | strip | remove:  "	" | escape | remove: "\" | normalize_whitespace | jsonify }}
  }{% unless forloop.last %},{% endunless %}
{%- endfor %}
]