---
permalink: api/presentations.json
---
{%- assign pages = site.pages | where_exp:"item", "item.path contains 'pages/presentations/'" | where_exp:"item", "item.path != 'pages/presentations/index.md'" -%}
[
{%- for page in pages %}
  {%- assign page_path = page.path | split: '/' %}
  {%- capture page_path_folder %}{{ page_path[0] }}/{{ page_path[1] }}/{{ page_path[2] }}/{% endcapture %}
  {
    "id"           : "{{ page.url | slugify }}",
    "url"          : "{{ page.url | absolute_url }}",
    "title"        : "{{ page.title | escape }}",
    "title_long"   : "{{ page.title_long | escape }}",
    "description"  : "{{ page.description | escape }}",
    "keywords"     : "{{ page.keywords | escape }}",
    "thumbnail_url": "{{ page.thumbnail_url | prepend: page_path_folder | absolute_url }}"
  }{% unless forloop.last %},{% endunless %}
{%- endfor %}
]