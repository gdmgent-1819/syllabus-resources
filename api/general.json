---
permalink: api/general.json
---
{%- assign pages = site.pages | where_exp:"item", "item.path contains 'pages/general/'" -%}
[
{%- for page in pages %}
  {
    "id"            : "{{ page.url | slugify }}",
    "url"           : "{{ page.url | absolute_url }}",
    "title"         : "{{ page.title | escape }}",
    "title_long"    : "{{ page.title_long | escape }}",
    "description"   : "{{ page.description | escape }}",
    "keywords"      : "{{ page.keywords | escape }}",
    "thumbnail_url" : "{{ page.thumbnail_url | escape }}",
    "content"       : {{ page.content | strip_html | strip_newlines | strip | escape | remove: "\" | normalize_whitespace | jsonify }}
  }{% unless forloop.last %},{% endunless %}
{%- endfor %}
]