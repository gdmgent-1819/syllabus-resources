---
permalink: api/posts.json
---
{%- assign posts = site.posts -%}
[
{%- for post in posts %}
  {
    "id": "{{ post.url | slugify }}",
    "url": "{{ post.url | absolute_url }}",
    "title": "{{ post.title | escape }}",
    "title_long": "{{ post.title_long | escape }}",
    "description": "{{ post.description | escape }}",
    "keywords": "{{ post.keywords | escape }}",
    "thumbnail_url": "{{ post.thumbnail_url | escape }}",
    "content": {{ post.content | strip_html | strip_newlines | strip | remove:  "	" | escape | remove: "\" | normalize_whitespace | jsonify }},
    "excerpt": "{{ post.excerpt | strip_newlines | escape | normalize_whitespace }}"
  }{% unless forloop.last %},{% endunless %}
{%- endfor %}
]